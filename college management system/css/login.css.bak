@charset "utf-8";
/* CSS Document */

body{
	margin:0 auto;
	
	background-image: url(../images/lb.jpg);
	background-repeat:no-repeat;
	background-size:100% 720px;

}
#container{
	width: 500px;
	height:400px;
	text-align:center;
	background-color: rgba(52,73,94,0.7);
	border-radius:55px;
	margin:0 auto;
	margin-top:140px;
}
#container img{
	height:120px;
	width:120px;
	margin-top:-10px;
	margin-bottom:30px;
}
input[type="text"],[type="password"]{
	height:50px;
	width:300px;
	font-size:18px;
	margin-bottom:20px;
	background-color:#fff;
	padding-left:3px;
}
#form-input::before{
	content:"\f007";
	position:absolute;
	font-family:"FontAwesome";
	font-size:30px;
	padding-left:15px;
	color:#03F;
	padding-top:7px;
	margin-bottom:35px;
	
}
#form-input:last-child::before{
	content:"\f023";
}
#btn{
	padding:15px 30px;
	color:#fff;
	cursor:pointer;
	border-radius:5px;
	border:none;
	background-color:#2EEc71;
	border-bottom:4px solid #27ae60;
	margin-bottom:20px;
}
a{
	color:#FFF;
}